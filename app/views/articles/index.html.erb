<ul class="list-group w-50 mx-auto mt-3">
  <% @articles.each do |article| %>
    <li class="border-0 list-group-item d-flex justify-content-between p-3">
    <div class="content">
      <%= link_to article.title, article_path(article)  %>
      <p><%= article.content %></p>
    </div>
      <%= link_to raw('<i class="fa-solid fa-trash-can"></i>'), article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete?"} %>
    </li>
  <% end %>
</ul>
